<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Famous Quotes: Results</title>
    <style>
        img {
            width: 300px;
        }
    </style>
    <link
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css"
        rel="stylesheet"
        integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB"
        crossorigin="anonymous"
    />
</head>

<body>

    <h1 class="bg-black text-white p-4 text-center m-0">Famous Quotes</h1>
    <%- include("partials/navbar.ejs") %>

    <div class="container my-5 text-center">
        <% if (!rows || rows.length === 0) { %>
            <p>No results found.</p>
        <% } else { %>
            <% for (let row of rows) { %>
                <figure class="border rounded p-3 shadow-sm mb-4 bg-light">
                    <blockquote class="blockquote mb-2">
                    “<%= row.quote %>”
                    </blockquote>
                    <figcaption class="blockquote-footer mb-0">
                        <a class="authors text-decoration-none fw-semibold" href="#" authorId="<%= row.authorId %>">
                            <%= row.firstName %> <%= row.lastName %>
                        </a>
                        <% if (row.category) { %>
                            <small class="d-block mt-1 text-muted">(Category: <%= row.category %>)</small>
                        <% } %>
                        <% if (typeof row.likes !== 'undefined' && row.likes !== null) { %>
                            <small class="d-block text-muted">Likes: <%= row.likes %></small>
                        <% } %>
                    </figcaption>
                </figure>
            <% } %>
        <% } %>
    </div>

    <div class="modal fade" id="authorModal" tabindex="-1" aria-labelledby="authorModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="authorModalLabel">Author Info</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body text-center">
                    <h2 id="authorName" class="mb-3"></h2>
                    <img id="authorImage" class="img-fluid rounded mb-3" alt="Author image">

                    <p id="authorSex"></p>
                    <p id="authorDOB"></p>
                    <p id="authorDOD"></p>
                    <p id="authorCountry"></p>
                    <p id="authorProfession"></p>
                    <p id="authorBio" class="mt-3"></p>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/results.js"></script>

</body>

</html>